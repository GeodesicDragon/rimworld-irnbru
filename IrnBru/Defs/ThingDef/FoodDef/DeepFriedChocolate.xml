<Defs>
  <ThingDef ParentName="MealBase">
    <defName>DeepFriedChocolate</defName>
    <label>deep-fried chocolate</label>
    <description>Chocolate, covered in batter, then dunked into hot oil and fried.\n\nWhat's not to like?</description>
    <graphicData>
      <texPath>Things/Item/DeepFriedChocolate</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(1,1)</drawSize>
    </graphicData>
    <rotatable>false</rotatable>
    <stackLimit>50</stackLimit>
    <statBases>
      <MarketValue>2</MarketValue>
      <Mass>0.075</Mass>
      <Flammability>1.0</Flammability>
      <Nutrition>0.9</Nutrition>
    </statBases>
    <ingestible>
      <foodType>Processed</foodType>
	  <tasteThought>AteDFC</tasteThought>
      <joyKind>Gluttonous</joyKind>
      <joy>0.25</joy>
      <nurseable>true</nurseable>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>Meal_Eat</ingestSound>
      <ingestHoldOffsetStanding>
        <northDefault>
          <offset>(0.18,0,0)</offset>
        </northDefault>
      </ingestHoldOffsetStanding>
      <ingestCommandString>Eat {0}</ingestCommandString>
      <ingestReportString>Eating {0}.</ingestReportString>
      <chairSearchRadius>25</chairSearchRadius>
	  <preferability>MealSimple</preferability>
	  <maxNumToIngestAtOnce>1</maxNumToIngestAtOnce>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>DFC_HeartAttackChance</hediffDef>
          <severity>0.15</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <techLevel>Industrial</techLevel>
	<thingCategories>
      <li>Foods</li>
    </thingCategories>
    <comps>
	<li Class="CompProperties_Rottable">
		<daysToRotStart>3</daysToRotStart>
		<rotDestroys>true</rotDestroys>
	</li>
	</comps>
  </ThingDef>

  <RecipeDef>
    <defName>DeepFryChocolate</defName>
    <label>make deep-fried chocolate</label>
    <description>Deep-fry chocolate to increase its nutritional value.</description>
    <jobString>Deep-frying chocolate.</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <workSkill>Cooking</workSkill>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>false</allowMixingIngredients>
    <workAmount>600</workAmount>
	<recipeUsers>
		<li>Campfire</li>
		<li>ElectricStove</li>
		<li>FueledStove</li>
	</recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Chocolate</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Chocolate</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <DeepFriedChocolate>5</DeepFriedChocolate>
    </products>
    <researchPrerequisites>
      <li>Cocoa</li>
    </researchPrerequisites>
  </RecipeDef>
  
    <RecipeDef>
    <defName>DeepFryFourChocolate</defName>
    <label>make deep-fried chocolate x4</label>
    <description>Deep-fry 4 loads chocolate to increase its nutritional value.</description>
    <jobString>Deep-frying 4 loads of chocolate.</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <workSkill>Cooking</workSkill>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>false</allowMixingIngredients>
    <workAmount>2400</workAmount>
	<recipeUsers>
		<li>Campfire</li>
		<li>ElectricStove</li>
		<li>FueledStove</li>
	</recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Chocolate</li>
          </thingDefs>
        </filter>
        <count>40</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Chocolate</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <DeepFriedChocolate>20</DeepFriedChocolate>
    </products>
    <researchPrerequisites>
      <li>Cocoa</li>
    </researchPrerequisites>
  </RecipeDef>
  
	<ThoughtDef>
    <defName>AteDFC</defName>
	<durationDays>0.25</durationDays>
	<validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>ate some deep-fried chocolate</label>
        <description>I can feel my cholestrol levels rising, and it feels good!</description>
        <baseMoodEffect>3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>  
  
<HediffDef>
    <defName>DFC_HeartAttackChance</defName>
    <label>high cholestrol</label>
    <description>High cholestrol caused by excessive consumption of deep-fried chocolate. Affects blood filtration and pumping, and can even cause cardiac arrest.</description>
    <labelNoun>cholestrol</labelNoun>
    <hediffClass>HediffWithComps</hediffClass>
    <maxSeverity>1</maxSeverity>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1</severityPerDay>
      </li>
    </comps>
    <stages>
		<li>
		<label>initial</label>
		<minSeverity>0.3</minSeverity>
		<capMods>
		  <li>
			<capacity>BloodFiltration</capacity>
			<offset>-0.05</offset>
		  </li>
		  <li>
			<capacity>BloodPumping</capacity>
			<offset>-0.05</offset>
		  </li>
		</capMods>
		</li>
		<li>
		<label>severe</label>
		<minSeverity>0.6</minSeverity>
		<capMods>
		  <li>
			<capacity>BloodFiltration</capacity>
			<offset>-0.10</offset>
		  </li>
		  <li>
			<capacity>BloodPumping</capacity>
			<offset>-0.10</offset>
		  </li>
		</capMods>
		</li>
		  <li>
			<label>extreme</label>
			<minSeverity>0.9</minSeverity>
			<capMods>
			  <li>
				<capacity>BloodFiltration</capacity>
				<offset>-0.15</offset>
			  </li>
			  <li>
				<capacity>BloodPumping</capacity>
				<offset>-0.15</offset>
			  </li>
			</capMods>
			<hediffGivers>
			<li Class="HediffGiver_Random">
				<hediff>HeartAttack</hediff>
				<mtbDays>30</mtbDays>
					<partsToAffect>
						<li>Heart</li>
					</partsToAffect>
			</li>
			</hediffGivers>
		</li>
	</stages>
</HediffDef>
</Defs>