<Defs>

  <!--ITEM-->

  <ThingDef ParentName="MealBase">
    <defName>DeepFriedChocolate</defName>
    <label>deep-fried Mars bar</label>
    <description>A Mars bar, covered in batter, then dunked into hot oil and fried.\n\nWhat's not to like?</description>
	<descriptionHyperlinks>
		<ThingDef>Chocolate</ThingDef>
	</descriptionHyperlinks>
    <graphicData>
      <texPath>Things/Item/DeepFriedChocolate</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(1,1)</drawSize>
    </graphicData>
    <rotatable>false</rotatable>
    <stackLimit>100</stackLimit>
    <statBases>
      <MarketValue>2</MarketValue>
      <Mass>0.075</Mass>
      <Flammability>1.0</Flammability>
      <Nutrition>0.9</Nutrition>
    </statBases>
    <ingestible>
      <foodType>Processed</foodType>
	  <tasteThought>AteDFC</tasteThought>
      <joyKind>Gluttonous</joyKind>
      <joy>0.25</joy>
      <nurseable>true</nurseable>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>Meal_Eat</ingestSound>
      <ingestHoldOffsetStanding>
        <northDefault>
          <offset>(0.18,0,0)</offset>
        </northDefault>
      </ingestHoldOffsetStanding>
      <ingestCommandString>Eat {0}</ingestCommandString>
      <ingestReportString>Eating {0}.</ingestReportString>
      <chairSearchRadius>25</chairSearchRadius>
	  <preferability>MealSimple</preferability>
	  <maxNumToIngestAtOnce>1</maxNumToIngestAtOnce>
    </ingestible>
    <techLevel>Industrial</techLevel>
    <comps>
	<li Class="CompProperties_Rottable">
		<daysToRotStart>3</daysToRotStart>
		<rotDestroys>true</rotDestroys>
	</li>
	</comps>
    <thingCategories>
		<li>Scottish_Foods</li>
    </thingCategories>
  </ThingDef>

  <!--ONE MARS BAR-->

  <RecipeDef>
    <defName>DeepFryChocolate</defName>
    <label>make a deep-fried Mars bar</label>
    <description>Create a single deep-fried Mars bar.</description>
    <jobString>Making a deep-fried Mars bar.</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <workSkill>Cooking</workSkill>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>false</allowMixingIngredients>
    <workAmount>600</workAmount>
	<recipeUsers>
		<li>Campfire</li>
		<li>ElectricStove</li>
		<li>FueledStove</li>
	</recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Chocolate</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Chocolate</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <DeepFriedChocolate>1</DeepFriedChocolate>
    </products>
    <researchPrerequisites>
      <li>Cocoa</li>
    </researchPrerequisites>
  </RecipeDef>

