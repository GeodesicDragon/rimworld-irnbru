<Defs>
  <ThingDef ParentName="MealBase">
    <defName>IrnBru</defName>
    <label>Irn-Bru</label>
	<socialPropernessMatters>true</socialPropernessMatters>
    <description>Scotland's other national drink, now available for consumption on the rimworlds.</description>
    <graphicData>
      <texPath>Things/Item/BruBottle</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
	  <drawSize>(1,1)</drawSize>
    </graphicData>
    <rotatable>false</rotatable>
    <stackLimit>50</stackLimit>
    <statBases>
      <MarketValue>1.5</MarketValue>
      <Mass>0.5</Mass>
      <Flammability>0</Flammability>
      <Nutrition>0.1</Nutrition>
    </statBases>
    <ingestible>
      <foodType>Fluid, Processed</foodType>
	  <tasteThought>DrankBru</tasteThought>
      <joyKind>Gluttonous</joyKind>
      <joy>0.1</joy>
      <nurseable>true</nurseable>
      <ingestSound>Ingest_Beer</ingestSound>
      <ingestHoldOffsetStanding>
        <northDefault>
          <offset>(0.18,0,0)</offset>
        </northDefault>
      </ingestHoldOffsetStanding>
      <ingestCommandString>Drink an {0}</ingestCommandString>
      <ingestReportString>Drinking an {0}.</ingestReportString>
      <chairSearchRadius>25</chairSearchRadius>
	  <preferability>RawTasty</preferability>
	  <maxNumToIngestAtOnce>3</maxNumToIngestAtOnce>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>IrnBru_SugarRush</hediffDef>
          <severity>0.3</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <techLevel>Industrial</techLevel>
	<thingCategories>
      <li>Foods</li>
    </thingCategories>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>3</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
	<tickerType>Normal</tickerType>
  </ThingDef>

  <RecipeDef>
    <defName>Make_Bru</defName>
    <label>make Irn-Bru (steel)</label>
    <description>Make Irn-Bru from steel.</description>
    <jobString>Making Irn-Bru from steel.</jobString>
    <workSpeedStat>DrugCookingSpeed</workSpeedStat>
    <workSkill>Cooking</workSkill>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Brewing</soundWorking>
    <allowMixingIngredients>false</allowMixingIngredients>
    <workAmount>600</workAmount>
	<recipeUsers>
		<li>Brewery</li>
	</recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <IrnBru>5</IrnBru>
    </products>
    <researchPrerequisites>
      <li>Brewing</li>
    </researchPrerequisites>
  </RecipeDef>
  
    <RecipeDef>
    <defName>Make_Bru_Berries</defName>
    <label>make Irn-Bru (berries)</label>
    <description>Make Irn-Bru from berries.</description>
    <jobString>Making Irn-Bru from berries.</jobString>
    <workSpeedStat>DrugCookingSpeed</workSpeedStat>
    <workSkill>Cooking</workSkill>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Brewing</soundWorking>
    <allowMixingIngredients>false</allowMixingIngredients>
    <workAmount>600</workAmount>
	<recipeUsers>
		<li>Brewery</li>
	</recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RawBerries</li>
          </thingDefs>
        </filter>
        <count>40</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>RawBerries</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <IrnBru>5</IrnBru>
    </products>
    <researchPrerequisites>
      <li>Brewing</li>
    </researchPrerequisites>
  </RecipeDef>
  
  <RecipeDef>
    <defName>MakeFourBru</defName>
    <label>make Irn-Bru (steel) x4</label>
    <description>Make 4 lots of Irn-Bru from steel.</description>
    <jobString>Making Irn-Bru x4 from steel.</jobString>
    <workSpeedStat>DrugCookingSpeed</workSpeedStat>
    <workSkill>Cooking</workSkill>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Brewing</soundWorking>
    <allowMixingIngredients>false</allowMixingIngredients>
    <workAmount>2400</workAmount>
	<recipeUsers>
		<li>Brewery</li>
	</recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>80</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <IrnBru>20</IrnBru>
    </products>
    <researchPrerequisites>
      <li>Brewing</li>
    </researchPrerequisites>
  </RecipeDef>
  
    <RecipeDef>
    <defName>MakeFourBruBerries</defName>
    <label>make Irn-Bru (berries) x4</label>
    <description>Make 4 lots of Irn-Bru from berries.</description>
    <jobString>Making Irn-Bru x4 from berries.</jobString>
    <workSpeedStat>DrugCookingSpeed</workSpeedStat>
    <workSkill>Cooking</workSkill>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Brewing</soundWorking>
    <allowMixingIngredients>false</allowMixingIngredients>
    <workAmount>2400</workAmount>
	<recipeUsers>
		<li>Brewery</li>
	</recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RawBerries</li>
          </thingDefs>
        </filter>
        <count>160</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>RawBerries</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <IrnBru>20</IrnBru>
    </products>
    <researchPrerequisites>
      <li>Brewing</li>
    </researchPrerequisites>
  </RecipeDef>
  
	<ThoughtDef>
    <defName>DrankBru</defName>
	<durationDays>0.25</durationDays>
	<validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>drank an Irn-Bru</label>
        <description>Och aye, that's awfy guid.</description>
        <baseMoodEffect>3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <HediffDef>
    <defName>IrnBru_SugarRush</defName>
    <label>sugar rush</label>
    <description>A sudden and brief burst of energy supposedly experienced after the consumption of food or drink with a high sugar content.</description>
    <labelNoun>sugars</labelNoun>
    <hediffClass>HediffWithComps</hediffClass>
    <maxSeverity>1</maxSeverity>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-3</severityPerDay>
      </li>
    </comps>
    <stages>
		<li>
		<label>low</label>
		<minSeverity>0.3</minSeverity>
		<capMods>
		  <li>
			<capacity>Moving</capacity>
			<offset>+0.1</offset>
		  </li>
		</capMods>
		</li>
		<li>
		<label>medium</label>
		<minSeverity>0.6</minSeverity>
		<capMods>
		  <li>
			<capacity>Moving</capacity>
			<offset>+0.2</offset>
		  </li>
		</capMods>
		</li>
		<li>
		<label>high</label>
		<minSeverity>0.9</minSeverity>
		<capMods>
		  <li>
			<capacity>Moving</capacity>
			<offset>+0.3</offset>
		  </li>
		</capMods>
		</li>
	</stages>
</HediffDef>
</Defs>